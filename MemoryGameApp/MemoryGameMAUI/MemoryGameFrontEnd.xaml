<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryGameMAUI.MemoryGameFrontEnd"
             Title="">
    <Grid ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="*,*,*,*,*,*,*">
        <Grid ColumnDefinitions="2*,2*,3*,*,3*,*" RowDefinitions="*,*" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="6" ColumnSpacing="10">
            <Button x:Name="BtnStart" Grid.Column="0" Grid.Row="0" Text="Start" Clicked="Button_Clicked" Style="{StaticResource Key=top-buttons}" FontFamily="RAVIE"/>
            <Button x:Name="bNextTurn" Grid.Column="1" Grid.Row="0" Text="Next Turn" Clicked="bNextTurn_Clicked" Style="{StaticResource Key=top-buttons}" FontFamily="RAVIE"/>
            <Label Grid.Column="2" Grid.Row="0" Text="TURN NUMBER:" VerticalTextAlignment="Center" FontFamily="STENCIL" FontSize="23"/>
            <Label Grid.Column="3" Grid.Row="0" Text="{Binding TurnNumberText}" VerticalTextAlignment="Center"/>
            <Label Grid.Column="4" Grid.Row="0" Text="SCORE:" VerticalTextAlignment="Center" FontFamily="STENCIL" FontSize="23"/>
            <Label Grid.Column="5" Grid.Row="0" Text="{Binding ScoreText}" VerticalTextAlignment="Center"/>
            <Label x:Name="lblStartToPlay" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="6" Text="{Binding Message}" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontFamily="ROCKWELL" FontSize="30" TextColor="Red"/>
        </Grid>

        <Button x:Name="btn11" Grid.Column="0" Grid.Row="1" Margin="2" Clicked="btn_Clicked" BindingContext="{Binding Spots[0]}" BackgroundColor ="{Binding BackColorMaui}"/>
